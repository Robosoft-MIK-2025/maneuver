<?xml version="1.0"?>
<robot name="drone">

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry><cylinder length="0.1" radius="0.2"/></geometry>
      <material name="gray"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
    <collision><geometry><sphere radius="0.3"/></geometry></collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Dummy propeller -->
  <link name="prop1"/>
  <joint name="prop1_joint" type="fixed">
    <parent link="base_link"/>
    <child link="prop1"/>
    <origin xyz="0.3 0.3 0"/>
  </joint>

</robot>

